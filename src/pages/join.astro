---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { getHomePermalink } from '~/utils/permalinks';
import SignUpFormWrapper from '../components/SignUpFormWrapper.svelte';

import { headerData } from '~/data';

const meta = {
  title: 'PLEBNET.DEV Join Us',
};

let formType = 'individual'; // default form type
---

<Layout {meta}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          type: "primary",
          text: 'Sign Up',
          href: '/join',
        },
      ]}
      isSticky
    />
  </Fragment>

  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <p class="text-3xl font-semibold md:text-3xl">Join Us.</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          How to join? Questions? <a href="/faq" class="text-orange-400 underline"><b>See FAQ.</b></a>
          <br />
        </p>

      </div>
    <div class="w-full max-w-md">
      <SignUpFormWrapper client:only="svelte" />
    </div>
    <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Back to homepage</a>
  </div>
  </section>
</Layout>